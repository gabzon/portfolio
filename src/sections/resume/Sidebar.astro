---
import { App } from "astro/app";
import gab from "../../assets/images/gab.jpg"
import { Image } from 'astro:assets';
---

<!-- Info -->
<div class="p-5 text-left md:col-span-4 lg:p-14">
    <h1 class="leading-tighter mt-5 text-4xl font-extrabold lg:text-6xl dark:text-white">
        Gabriel<br />Zambrano
