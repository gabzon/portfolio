---
import MainLayout from "../layouts/MainLayout.astro"
import Projectos from "../sections/Projects.astro";
import { Image } from 'astro:assets';
import feraltango from "../images/feraltango.jpg"
import bailaconmigo from "../images/bailaconmigo.jpg"
import fitbydanielja from "../images/fitbydanijela.jpg"
import buenavista from "../images/buenavista.jpg"
import dancefloor from "../images/dancefloor.jpg"
---

<MainLayout>
<div class="sm:px-8 mt-10 sm:mt-12 md:mt-14 lg:mt-16">
    <div class="mx-auto w-full max-w-7xl lg:px-8">

        <div class="max-w-[85rem] px-4 pb-10 sm:px-6 lg:px-8 lg:pb-14 mx-auto">
        
            <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
                <h2 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white">Portfolio</h2>
                <p class="mt-1 text-gray-600 dark:text-neutral-400">A collection of the websites in the field of fitness and health I've worked on.</p>
            </div>
        
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        
                <a class="group hover:bg-gray-100 dark:hover:bg-gray-800 rounded-xl p-2" href="https://feraltango.pages.dev" target="_blank">
                    <div class="relative pt-[50%] sm:pt-[70%] rounded-xl overflow-hidden">
                        <Image src={feraltango} alt="feraltango screenshot" class="size-full absolute top-0 start-0 object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out rounded-xl" />
                    </div>
                    <div class="mt-3 space-y-2 px-3">
                        <h3 class="text-xl font-semibold text-gray-800 group-hover:text-gray-600 dark:text-neutral-300 dark:group-hover:text-white">
                            FeralTango
                        </h3>
                        <p class="text-gray-500 dark:text-neutral-200">
                            Tango maestros living Croatia, currently under construction.
                        </p>
                        <p class="inline-flex items-center gap-x-1 text-red-600 decoration-2 font-medium pb-3">
                            Visit website 
                            <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                        </p>
                    </div>
                </a>

                <a class="group hover:bg-gray-100 dark:hover:bg-gray-800 rounded-xl p-2" href="https://plesnistudiobailaconmigo.com/" target="_blank">
                    <div class="relative pt-[50%] sm:pt-[70%] rounded-xl overflow-hidden">
                        <Image src={bailaconmigo} alt="bailaconmigo screenshot" class="size-full absolute top-0 start-0 object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out rounded-xl" />
                    </div>
                    <div class="mt-3 space-y-2 px-3">
                        <h3 class="text-xl font-semibold text-gray-800 group-hover:text-gray-600 dark:text-neutral-300 dark:group-hover:text-white">
                            Plesni studio BailaConmigo
                        </h3>
                        <p class="text-gray-500 dark:text-neutral-200">
                            Salsa, bachata and latin dances school in Split, Croatia.
                        </p>
                        <p class="inline-flex items-center gap-x-1 text-red-600 decoration-2 font-medium pb-3">
                            Visit website
                            <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                        </p>
                    </div>
                </a>

                <a class="group hover:bg-gray-100 dark:hover:bg-gray-800 rounded-xl p-2" href="https://fitbydanijela.com/" target="_blank">
                    <div class="relative pt-[50%] sm:pt-[70%] rounded-xl overflow-hidden">
                        <Image src={fitbydanielja} alt="fit by danijela screenshot" class="size-full absolute top-0 start-0 object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out rounded-xl" />
                    </div>
                    <div class="mt-3 space-y-2 px-3">
                        <h3 class="text-xl font-semibold text-gray-800 group-hover:text-gray-600 dark:text-neutral-300 dark:group-hover:text-white">
                            Fit by Danijela
                        </h3>
                        <p class="text-gray-500 dark:text-neutral-200">
                            Functional trainner & Fitness center in Karlovac, Croatia.
                        </p>
                        <p class="inline-flex items-center gap-x-1 text-red-600 decoration-2 font-medium pb-3">
                            Visit website
                            <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                        </p>
                    </div>
                </a>

                <a class="group hover:bg-gray-100 dark:hover:bg-gray-800 rounded-xl p-2" href="#">
                    <div class="relative pt-[50%] sm:pt-[70%] rounded-xl overflow-hidden">
                        <Image src={dancefloor} alt="dancefloor screenshot" class="size-full absolute top-0 start-0 object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out rounded-xl" />
                    </div>
                    <div class="mt-3 space-y-2 px-3">
                        <h3 class="text-xl font-semibold text-gray-800 group-hover:text-gray-600 dark:text-neutral-300 dark:group-hover:text-white">
                            Dancefloor
                        </h3>
                        <p class="text-gray-500 dark:text-neutral-200">
                            Latin & urban dances school in Geneva, Switzerland.
                        </p>
                        <p class="inline-flex items-center gap-x-1 text-red-600 decoration-2 font-medium pb-3">
                            Visit website
                            <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                        </p>
                    </div>
                </a>

                <a class="group hover:bg-gray-100 dark:hover:bg-gray-800 rounded-xl p-2" href="https://www.buena-vista.me/" target="_blank">
                    <div class="relative pt-[50%] sm:pt-[70%] rounded-xl overflow-hidden">
                        <Image src={buenavista} alt="Buena Vista screenshot" class="size-full absolute top-0 start-0 object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out rounded-xl" />
                    </div>
                    <div class="mt-3 space-y-2 px-3">
                        <h3 class="text-xl font-semibold text-gray-800 group-hover:text-gray-600 dark:text-neutral-300 dark:group-hover:text-white">
                            Buena Vista
                        </h3>
                        <p class="text-gray-500 dark:text-neutral-200">
                            Salsa, Bachata and Tango school in Podgorica, Montenegro.
                        </p>
                        <p class="inline-flex items-center gap-x-1 text-red-600 decoration-2 font-medium pb-3">
                            Visit website
                            <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                        </p>
                    </div>
                </a>


            </div>
        </div>
        
        <div class="mt-12">
            <Projectos/>
        </div>
    </div>
</div>
</MainLayout>